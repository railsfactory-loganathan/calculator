<!DOCTYPE html>
<html>
<head>
  <title>Newmemberproject</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
	<style>
	#logout{position:absolute;
							top:10px;
							left:930px;
							text-color:blue;
							}
#line{background-color:#aaaaaa;
					height:70px;
					width:1300px;}							
	</style>
</head>
<body>
<%if current_user%>
<div id="line">
<div id="logout"><%=link_to current_user.login%>|<%=link_to "logout",session_url,:method=>'delete'%></div>
<hr  />
</div>
<%else%>
<div id="line">
<div id="logout"><%=link_to "login",new_session_url%></div>
<hr  />
</div>
<%end%>

<%= yield %>

</body>
</html>
